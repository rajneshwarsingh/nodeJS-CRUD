{
  "name": "node-CRUD",
  "version": "1.0.0",
  "description": "The code represent CRUD operations in node.js with MongoDB.",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=development nodemon --exec babel-node -- index.js",
    "staging": "NODE_ENV=staging pm2 start dist/index.js",
    "serve": "NODE_ENV=staging nodemon --exec babel-node -- dist/index.js",
    "build": "rm -rf dist && babel . -d dist --ignore node_modules && cp package.json dist",
    "ri": "rm -rf dist && rm -rf node_modules && rm -rf lib && npm install",
    "format": "prettier --write ."
  },
  "author": "Rajneshwar Singh",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rajneshwarsingh/nodejs-crud.git"
  },
  "bugs": {
    "url": "https://github.com/rajneshwarsingh/nodejs-crud/issues"
  },
  "homepage": "https://github.com/rajneshwarsingh/nodejs-crud#readme",
  "dependencies": {
    "app-root-path": "^3.1.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "config": "^3.3.11",
    "continuation-local-storage": "^3.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-list-routes": "^1.2.1",
    "helmet": "^7.1.0",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^6.0.1",
    "nodemon": "^3.1.0",
    "path": "^0.12.7",
    "uuid": "^9.0.1",
    "winston": "^3.12.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.24.0",
    "@babel/node": "^7.23.9",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.24.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  }
}
